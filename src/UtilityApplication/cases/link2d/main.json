{
    "analysis_stage": "KratosMultiphysics.StructuralMechanicsApplication.structural_mechanics_analysis",
    "problem_data": {
        "problem_name": "link_constraint_2D",
        "parallel_type": "OpenMP",
        "echo_level": 1,
        "start_time": 0.0,
        "end_time": 1
    },
    "solver_settings": {
        "time_stepping": {
            "time_step": 1
        },
        "solver_type": "Static",
        "model_part_name": "root",
        "domain_size": 2,
        "echo_level": 1,
        "analysis_type": "non_linear",
        "reform_dofs_at_each_step" : false,
        "@include_json" : "move_mesh_flag.json",
        "max_iteration" : 1e2,
        "model_import_settings": {
            "input_type": "mdpa",
            "input_filename" : "mesh"
        },
        "material_import_settings": {
            "materials_filename": "materials.json"
        },
        "convergence_criterion": "displacement_criterion",
        "displacement_relative_tolerance": 1e-6,
        "displacement_absolute_tolerance": 1e-9,
        "builder_and_solver_settings" : {
            "type" : "p_multigrid",
            "advanced_settings" : {
                "verbosity" : 3,
                "max_iterations" : 1,
                "smoother_settings" : {"solver_type" : "skyline_lu_factorization"},
                "constraint_imposition_settings" : {
                    "method" : "augmented_lagrange",
                    "penalty_factor" : "1e6 * max",
                    "max_iterations" : 2e1,
                    "tolerance" : 1e-9,
                    "verbosity" : 1
                }
            }
        },
        "solving_strategy_settings" : {
            "type" : "newton_raphson",
            "advanced_settings" : {}
        }
    },
    "processes": {
        "constraints_process_list": [
            {
                "python_module": "assign_vector_variable_process",
                "kratos_module": "KratosMultiphysics",
                "process_name": "AssignVectorVariableProcess",
                "Parameters": {
                    "model_part_name": "root.dirichlet",
                    "variable_name": "DISPLACEMENT",
                    "interval": [0.0, "End"],
                    "constrained": [true, true, false],
                    "value": [0.0, 0.0, 0.0]
                }
            },
            {
                "python_module" : "MakeLinkConstraints",
                "process_name" : "MakeLinkConstraints",
                "Parameters" : {
                    "model_part_name" : "root",
                    "node_pairs" : [[2, 3]],
                    "@include_json" : "move_mesh_flag.json"
                }
            }
        ],
        "loads_process_list": [
            {
                "python_module": "assign_vector_by_direction_to_condition_process",
                "kratos_module": "KratosMultiphysics",
                "process_name": "AssignVectorByDirectionToConditionProcess",
                "Parameters": {
                    "model_part_name": "root.neumann",
                    "variable_name": "POINT_LOAD",
                    "interval": [
                        0.0, "End"
                    ],
                    "modulus": "t",
                    "direction": [-2, 7, 0]
                }
            }
        ],
        "list_other_processes": []
    },
    "output_processes": {
        "vtk" : [
            {
                "Parameters": {
                  "folder_name": "vtk",
                  "model_part_name": "root",
                  "nodal_solution_step_data_variables": [
                    "DISPLACEMENT"
                  ],
                  "output_sub_model_parts": false,
                  "save_output_files_in_folder": true
                },
                "kratos_module": "KratosMultiphysics",
                "process_name": "VTKOutputProcess",
                "python_module": "vtk_output_process"
            }
        ]
    }
}
