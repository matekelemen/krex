
Bootstrap: localimage
From: krex_source_ubuntu.sif

%post -c /bin/bash
    set -e

    cd "$HOME"
    mkdir -p git
    cd git

    # Build
    cd krex/build
    ./build_kratos.sh -t Release -c gcc     \
        -a StructuralMechanicsApplication   \
        -a FluidDynamicsApplication         \
        -a LinearSolversApplication         \
        -a MetisApplication                 \
        -a HDF5Application                  \
        -a ../src/WRApplication
