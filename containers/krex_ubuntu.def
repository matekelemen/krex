
Bootstrap: localimage
From: krex_source_ubuntu.sif

%post -c /bin/bash
    set -e

    cd "$HOME"
    source .bashrc
    cat .bashrc
    echo $PATH
    echo $(pwd)
    mkdir -p git
    cd git

    # Build
    cd krex/build
    source penv kratos_release
    ./build_kratos -t Release -c gcc -a kratos_default_apps.txt -a kratos_extended_apps.txt -a kratos_custom_apps.txt
