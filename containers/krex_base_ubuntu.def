BootStrap: docker
From: ubuntu:22.04

%post -c /bin/bash
    set -e
    home="$pwd"

    if ! apt update -y && apt upgrade -y; then
        exit $?
    fi

    if ! apt install -y --no-install-recommends                                                         \
                     gnupg2                                                                             \
                     software-properties-common                                                         \
                     wget
    then
        exit $?
    fi

    # Extend package manager repository
    wget https://apt.repos.intel.com/intel-gpg-keys/GPG-PUB-KEY-INTEL-SW-PRODUCTS.PUB -P/tmp
    apt-key add /tmp/GPG-PUB-KEY-INTEL-SW-PRODUCTS.PUB
    rm /tmp/GPG-PUB-KEY-INTEL-SW-PRODUCTS.PUB
    echo deb https://apt.repos.intel.com/oneapi all main > /etc/apt/sources.list.d/oneAPI.list
    add-apt-repository ppa:git-core/ppa

    # Install dependencies from the package manager
    apt -y update
    apt install -y --no-install-recommends                                                              \
        build-essential                                                                                 \
        ccache                                                                                          \
        ninja-build                                                                                     \
        libbenchmark-dev                                                                                \
        g++-12                                                                                          \
        libomp-dev                                                                                      \
        cmake                                                                                           \
        git                                                                                             \
        intel-oneapi-mkl-devel                                                                          \
        libboost-dev                                                                                    \
        libhdf5-dev                                                                                     \
        libhdf5-openmpi-dev                                                                             \
        libmetis-dev                                                                                    \
        libopenmpi-dev                                                                                  \
        libscotch-dev                                                                                   \
        trilinos-all-dev                                                                                \
        openmpi-bin                                                                                     \
        python3-dev                                                                                     \
        python3-h5py                                                                                    \
        python3-pip                                                                                     \
        python3-venv

    /usr/sbin/update-ccache-symlinks
    echo 'export PATH="/usr/lib/ccache:$PATH"' | tee -a ~/.bashrc

    # Create python virtual environments
    cd "$home"
    mkdir "python_venv"
    cd "python_venv"
    if ! python3 -m pip install --upgrade pip; then echo "Error: failed to update pip" && exit $?; fi
    if ! python3 -m venv kratos_release --copies; then echo "Error: failed to create virtual environment" && exit $?; fi
    source kratos_release/bin/activate

    python3 -m pip install                                                                              \
        numpy                                                                                           \
        h5py                                                                                            \
        matplotlib                                                                                      \
        sympy                                                                                           \
        mypy                                                                                            \
        scipy

    # Clean package manager
    apt -y autoremove
    apt clean

    # Linutils
    cd "$home"
    git clone https://github.com/matekelemen/linutils.git --depth 1
    python3 linutils/install.py
